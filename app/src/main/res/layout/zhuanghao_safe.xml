<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0fff0">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >
        <ImageView
            android:id="@+id/Haosafe_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号安全"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名"
            android:textSize="15sp"
            android:layout_margin="10dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/zhanghao_ming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKT-1 Caker"
            android:layout_margin="10dp"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
       >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱地址"
            android:textSize="15sp"
            android:layout_margin="10dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/bangding_youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right"
            android:drawablePadding="10dp"
            android:text="未绑定"
            android:layout_margin="10dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="手机号"
            android:textSize="15sp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="189-8953-4464"
            android:layout_margin="10dp"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/mimaxiugai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_margin="10dp"
            android:textSize="15sp"
            />

       

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/safe_center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="安全中心"
            android:layout_margin="10dp"
            android:textSize="15sp"
            />
        
    </LinearLayout>







</LinearLayout>