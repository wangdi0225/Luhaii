<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#000000">
        <ImageButton
            android:id="@+id/tianxieyanzhengma_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/back"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写验证码"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tianxieshoujihao_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们已经给你的手机号码+86-"
            android:layout_gravity="center"
            android:textColor="#888888"
            android:textSize="10sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tianxieyanzhengma_shouji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15923482999"
            android:layout_gravity="center"
            android:textColor="#888888"
            android:textSize="12sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tianxieshoujihao_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送了一条验证短信"
            android:textColor="#888888"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:visibility="gone"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tianxieyanzhengma_duanxin"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:hint="请输入短信验证码"
            android:paddingLeft="10dp"
            android:inputType="phone"
            android:textColor="#888888"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/tianxieyanzhengma_chongxinfasong"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginLeft="1dp"
            android:text="获取验证码"
            android:textColor="#666666"

            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <Button
            android:id="@+id/tianxieyanzhengma_xiayibu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/anniubeijing2"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/tianxieyanzhengma_bangding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/gou"
            android:layout_marginLeft="20dp"
            android:text="讲此手机号与QQ绑定，提高账号安全性"
            android:textColor="#888888"
            android:textSize="13sp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>