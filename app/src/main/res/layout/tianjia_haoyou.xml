<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f2f4f5">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >

        <LinearLayout
            android:id="@+id/tianjia_friendback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友"
                android:textColor="#ffffff"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:drawablePadding="5dp"
                android:drawableLeft="@mipmap/back_bai"
                android:layout_centerVertical="true"
                android:gravity="center"
                />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/QQnumber_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ号/游戏ID"
            android:layout_margin="10dp"
            android:textSize="15sp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/chazhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sousuo_chu"
            android:layout_margin="10dp"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/newfriend_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/friends_huang"
            android:layout_margin="10dp"
            android:drawablePadding="7dp"
            android:text="新的朋友"
            android:textSize="15dp"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/xinpengyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:gravity="center"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/likemore_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/aixin_huang"
            android:layout_margin="10dp"
            android:drawablePadding="12dp"
            android:text="喜爱最多"
            android:textSize="15dp"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/xiai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_margin="10dp"
            android:gravity="center"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/xinlangweibo_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/weibo_huang"
            android:layout_margin="10dp"
            android:drawablePadding="11dp"
            android:text="新浪微博"
            android:textSize="15dp"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/xinlang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_margin="10dp"
            android:gravity="center"
            />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/tenxunweibo_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="2dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/qq_huang"
            android:layout_margin="10dp"
            android:drawablePadding="17dp"
            android:text="腾讯微博"
            android:textSize="15dp"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/tenxun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_margin="10dp"
            android:gravity="center"
            />




    </LinearLayout>






</LinearLayout>