<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f3f4f6">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        >

        <LinearLayout
            android:id="@+id/pinglun_zhuangfa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/pinglunfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转发"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/pinglun_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0"

                />
        </LinearLayout>





        <TextView
            android:id="@+id/pinglun_anniu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="评论 1"
            android:layout_marginTop="1dp"
            android:background="@drawable/pinglunkuangkuang"
            android:textColor="#bcbf51"
            android:gravity="center"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"/>

        <LinearLayout
            android:id="@+id/zan_xiangqing"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:layout_margin="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        >

        <ImageView
            android:id="@+id/pinglun_user_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/aamao"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/pinglun_deren"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="叶良辰"
                android:layout_marginTop="10dp"


                />

            <TextView
                android:id="@+id/pinglun_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="03-10  09:29"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/pinglun_dehua"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="来呀，一起一起！"
                android:layout_marginTop="5dp"
                ></TextView>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>